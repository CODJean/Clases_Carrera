{
    "version": "2.0.0",
    "tasks": [
        {
            // ðŸ§° CompilaciÃ³n C++
            "type": "cppbuild",
            "label": "C/C++: g++.exe (UTF-8) compilar archivo activo",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-finput-charset=UTF-8",
                "-fexec-charset=UTF-8",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Compila el archivo C++ actual con soporte UTF-8."
        },
        {
            // ðŸ§° CompilaciÃ³n C
            "type": "cppbuild",
            "label": "C/C++: gcc.exe (UTF-8) compilar archivo activo",
            "command": "C:\\MinGW\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-finput-charset=UTF-8",
                "-fexec-charset=UTF-8",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compila el archivo C actual con soporte UTF-8."
        },
        {
            // â–¶ï¸ Compilar y ejecutar C en terminal externa
            "label": "Compilar y ejecutar (terminal externa)",
            "type": "shell",
            "command": "C:\\MinGW\\bin\\gcc.exe",
            "args": [
                "-finput-charset=UTF-8",
                "-fexec-charset=UTF-8",
                "-g",
                "\"${file}\"",
                "-o",
                "\"${fileDirname}\\${fileBasenameNoExtension}.exe\"",
                "&&",
                "start",
                "cmd",
                "/K",
                "\"chcp 65001 >nul && \\\"${fileDirname}\\${fileBasenameNoExtension}.exe\\\" && echo. && pause\""
            ],
            "options": {
                "cwd": "${fileDirname}",
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/C"]
                }
            },
            "problemMatcher": ["$gcc"],
            "group": "test",
            "presentation": {
                "reveal": "silent"
            },
            "detail": "Compila y ejecuta C en terminal externa con UTF-8"
        },
